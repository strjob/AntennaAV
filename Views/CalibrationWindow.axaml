<Window
    x:Class="AntennaAV.Views.CalibrationWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:AntennaAV.ViewModels"
    Title="Калибровка"
    Width="400"
    Height="400"
    x:DataType="vm:CalibrationWindowViewModel"
    WindowStartupLocation="CenterScreen">
    <Grid>
      <StackPanel>
        <Border
            Background="Transparent"
            BorderBrush="{DynamicResource SystemBaseLowColor}"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="1"
            CornerRadius="8">

            <StackPanel>
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <TextBox
                        x:Name="CalibrationvalueText"
                        Width="130"
                        Height="32"
                        Margin="10"
                        Watermark="Мощность, дБм" />
                    <Button
                        Margin="10"
                        Command="{CompiledBinding SendCalibrationPointCommand}"
                        CommandParameter="{CompiledBinding Text,
                                                           ElementName=CalibrationvalueText}"
                        Content="Установить точку" />
                </StackPanel>
                <TextBlock
                    Margin="10,0,0,0"
                    Foreground="Red"
                    Text="{CompiledBinding CalibrationErrorText}" />
                <Button
                    Margin="10"
                    Command="{CompiledBinding ClearCalibrationCommand}"
                    Content="Очистить калибровку"
                    ToolTip.Tip="Сброс калибровки для текущего режима" />
                <Button
                    Margin="10"
                    Command="{CompiledBinding SaveCalibrationCommand}"
                    Content="Сохранить всё"
                    ToolTip.Tip="Сохранение каливбровки для всех режимов в энергонезависимую память" />
            </StackPanel>
        </Border>
        <StackPanel Orientation="Horizontal" Margin="10" Spacing="10">
          <ComboBox
              Width="100"
              ItemsSource="{Binding GainOptions}"
              Margin="5"
              SelectedItem="{Binding SelectedGain, Mode=TwoWay}" />
          <StackPanel>
          <Button
              Content="Установить усиление"
              Margin="5"
              Command="{Binding SetGainCommand}" />
          <Button
              Content="Установить усиление СВЧ"
              Margin="5"
              Command="{Binding SetDefaultRfGainCommand}" />
          </StackPanel>
        </StackPanel>
      </StackPanel>
    </Grid>
</Window>

